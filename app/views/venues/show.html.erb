<div class="container">
  <div class="show-img">
    <%= cl_image_tag @venue.photos.first.key, crop: :fill %>
  </div>
  <div class="tags-box">
    <% @venue.tags.each do |tag| %>
      <p class="tag">#<%= tag.name %></p>
    <% end %>
  </div>
  <div class="review-photo-tgl">
<!--     make these radio buttons
    whichever is selected displays
    the content below -->
    <h3>Reviews</h3>
    <h3>Photos</h3>
  </div>
  <div class="review-photo-dsply">
    <% @venue.reviews.each do |review| %>
      <div class="card-review">
        <%= cl_image_tag review.photo.key, crop: :fill %>
        <div class="card-review-infos">
          <!-- data migration to add review title -->
          <h2>Title goes here<!-- review.title --></h2>
          <p><%= review.comment %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
