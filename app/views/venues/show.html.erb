<div class="container">
  <div class="show-img">
    <% if @venue.photos.attached? %>
      <%= cl_image_tag @venue.photos.first.key, crop: :fill %>
    <% else%>
      <img src="https://source.unsplash.com/500x400/?cafe" alt="a cafe">
    <% end %>
  </div>
  <div class="tags-box">
    <% @venue.tags.each do |tag| %>
      <p class="tag">#<%= tag.name %></p>
    <% end %>
  </div>
  <div class="review-photo-tgl">
    <%= link_to 'Reviews', 'javascript:;', id: "reviews" %>
     <%= link_to 'Photos', 'javascript:;', id: "photos" %>
  </div>
  <div class="review-photo-dsply">
    <% @venue.reviews.each do |review| %>
      <div class="notification active">
        <%= cl_image_tag review.photo.key, crop: :fill, class: "avatar-square" %>
        <div class="notification-content">
          <p><small>14th January</small></p>
          <!-- data migration to add review title -->
          <h2>Title goes here<!-- review.title --></h2>
          <p><%= review.comment %></p>
        </div>
        <div class="notification-actions">
          <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
          <a href="#">Delete <i class="far fa-trash-alt"></i></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
