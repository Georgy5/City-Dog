<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Filter by Tag</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="modal-filter-grid">
          <% @tags.each do |tag| %>
            <button type="button" class="btn-lp modal-filter-btn">
              <%= tag.name %>
            </button>
          <% end %>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn-block btn-lg" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>